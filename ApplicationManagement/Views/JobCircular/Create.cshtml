@model ApplicationManagement.DbModel.JobCircular

@{
    ViewData["Title"] = "নতুন চাকরির বিজ্ঞপ্তি প্রদান";
}

<h2>Post New job Circular</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="PostName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PostName" placeholder="Name of the Post" class="form-control" />
                <span asp-validation-for="PostName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Description" placeholder="Description of the Post" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="NoOfTotalAvailablePosts" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="NoOfTotalAvailablePosts" type="number" min="1" max="999" placeholder="No Of Total Available Posts" class="form-control" required />
                <span asp-validation-for="NoOfTotalAvailablePosts" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="NoticeImageFileUrl" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="NoticeImageFileUrl" class="form-control" placeholder="Should upload file of notice in here (Not Done Yet)" />
                <span asp-validation-for="NoticeImageFileUrl" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="StartDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="StartDate" placeholder="Start Date of Application" type="text" class="form-control DatePicker" required />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="EndDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="EndDate" placeholder="End Date of Application" type="text" class="form-control DatePicker" required />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="প্রদান করুন (Post the Application)" class="btn btn-danger" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
