@model IEnumerable<ApplicationManagement.DbModel.JobCircular>

@{
    ViewData["Title"] = "চাকুরীর বিজ্ঞপ্তি";
}

<h2>Index</h2>

<p>
    <a asp-action="Create" class="btn btn-primary" role="button">নতুন চাকরির বিজ্ঞপ্তি (Add New Job Circular)</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PostName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NoticeImageFileUrl)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NoOfTotalAvailablePosts)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PostName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoticeImageFileUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoOfTotalAvailablePosts)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
