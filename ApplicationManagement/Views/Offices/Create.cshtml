@model ApplicationManagement.DbModel.Office

@{
    ViewData["Title"] = "নতুন অফিস যোগ করুন";
}

<form asp-action="Create">
    <fieldset class="fieldset-bordered">
        <legend class="legend-bordered">Add a New Office</legend>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Name" class="control-label col-xs-2 vertical-middle"></label>
                    <div class="col-xs-10">
                        <input asp-for="Name" class="form-control" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Description" class="control-label col-xs-2 vertical-middle"></label>
                    <div class="col-xs-10">
                        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-xs-offset-4 col-xs-4">
                <button type="submit" class="btn btn-primary btn-block">যোগ করুন (Add The Office)</button>
            </div>
        </div>

    </fieldset>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
